@import '/path/to/reset-css/reset.css';

light-orange = #fffae6;
medium-orange = #ffe4b8;
orange = #ff8a00;
green = #30de8b;
light-grey = #ced4da;

colors = {
  light-orange : #fffae6,
  medium-orange : #ffe4b8,
  orange : #ff8a00,
  green : #30de8b,
  light-grey : #ced4da
}

for name, color in colors
  .c-{name}
    color : color
  
  .btn-{name}
    border: none
    width: 100%
    padding: 1rem
    color : white
    background: color
    &:hover
      cursor: pointer
      filter: contrast(90%)

border-radius()
    -webkit-border-radius: arguments
    -moz-border-radius: arguments
    border-radius: arguments

box-shadows()
    box-shadow: arguments
	  -webkit-box-shadow: arguments 
	  -moz-box-shadow: arguments 

flex(align, spaces)
    display: flex
    flex-direction: align
    justify-content: spaces
    align-items: center

grid(templates, composistion)
    display: grid
    grid-template-columns: repeat(templates, composistion)

for num in 1..100
  .p-{num}
    padding: num px;
  .p-t-{num}
    padding-top: num px;
  .p-b-{num}
    padding-bottom: num px;
  .p-l-{num}
    padding-left: num px;
  .p-r-{num}
    padding-right: num px;

// -------------------------------------------------------------------------------//
//                                   HTML
// -------------------------------------------------------------------------------//

body
    font: 12px Helvetica, Arial, sans-serif
    background: light-orange
    height: 100%

.container
    box-shadows(-3px 5px 22px rgba(#ff8a00, 0.2))
    border-radius(10px)
    padding: 25px
    margin: 55px auto
    background: white
    height: 75vh
    max-width: 70vw
  
.flex__row--space-between
    flex(row, space-between)

.payment-process-step
    width: 100%
    display: block
    position: absolute
    left 0;
    font-size: 12px
    font-weight: 700
    color: orange
    top: 15px;
    ul
      flex(row, space-evenly)
      border-radius(2rem)
      margin: auto
      width: 450px;
      line-height: 70px
      background: light-orange
      padding: 0
      list-style :none
      li, span.round
        display: flex
        align-items: center
        justify-content: center
        color: orange

.round
    border-radius:50%;
    width:25px;
    height:25px;
    display:inline-block;
    border:none;
    background: medium-orange;
    margin-right:10px;   

.active, 
.btn-orange
    color: white !important
    background: orange !important

