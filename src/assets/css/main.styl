//Grid
.grid-2
    grid(2, 1fr)
    grid-gap: 0px 25px

.grid-2__custom
    display: grid;
    grid-template-columns: 1.35fr 0.65fr;
    grid-template-rows: 1fr;
    gap: 15px;
    grid-template-areas: ". .";
    height: 90%;

//INPUT
.field 
  display: flex;
  flex-flow: column-reverse;

input, textarea
  transition: all 0.2s;
  touch-action: manipulation;
  padding: 10px
  margin: 10px 0
  resize: none

a
  cursor: pointer;
  &:hover 
    outline: none

