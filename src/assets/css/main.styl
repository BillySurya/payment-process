//Grid
.grid-2
    grid(2, 1fr)
    grid-gap: 0px 25px

.grid-2__custom
    display: grid;
    grid-template-columns: 1.35fr 0.65fr;
    grid-template-rows: 1fr;
    gap: 15px;
    grid-template-areas: ". .";
    height: 90%;

.summary
    display: flex;
    flex-direction: column;
    justify-content: space-between


    margin-left: 20px;
    border-left: 1px solid orange;
    padding: 0 20px;

.summary-footer__heading
  display: flex
  flex-direction: row
  justify-content: space-between


//INPUT
.field 
  display: flex;
  flex-flow: column-reverse;

input 
  transition: all 0.2s;
  touch-action: manipulation;
  padding: 10px
  margin: 10px 0

textarea
  resize: none
  padding: 10px

