@import '/path/to/reset-css/reset.css';
@import 'color';
@import 'pages/*';

// -------------------------------------------------------------------------------//
//                                   HTML
// -------------------------------------------------------------------------------//

*
  font-size: 11pt
  &:focus
    outline: none

body
    font: 12px Helvetica, Arial, sans-serif
    background: light-orange
    height: 100%

h1
  title(23pt)

h2
  title(18pt)

.container
    box-shadows(-3px 5px 22px rgba(#ff8a00, 0.2))
    border-radius(10px)
    padding: 25px
    margin: 55px auto
    background: white
    max-width: 70vw
  
.flex__row--space-between
    flex(row, space-between)

.payment-process-step
    width: 100%
    display: block
    position: absolute
    left 0;
    font-size: 12px
    font-weight: 700
    color: primary-orange
    top: 15px;
    ul
      flex(row, space-evenly)
      border-radius(2rem)
      margin: auto
      width: 450px;
      line-height: 70px
      background: light-orange
      padding: 0
      list-style :none
      li, span.round
        display: flex
        align-items: center
        justify-content: center
        color: primary-orange

.round
    border-radius:50%;
    width:25px;
    height:25px;
    display:inline-block;
    border:none;
    background: medium-orange;
    margin-right:10px;   

.active, 
.btn-orange
    color: white !important
    background: primary-orange !important

.bold 
    font-weight: 700 
